{
    "name" : "Gnubila France Screenshare Extension",
    "author": "Gnubila France",
    "version" : "0.0.6",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Chrome Extension granting WebRTC screen capturing capabilities to Gnubila France meetings.",
    "homepage_url": "https://gnubila.fr/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true
    },
    "externally_connectable": {
       "matches": [
           "*://*.gnubila.fr/*",
           "*://*.bigbluebutton.org/*"
         ]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}

